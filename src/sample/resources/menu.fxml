<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="vbox" prefHeight="400" prefWidth="800"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.Controller">
    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
        <Menu text="File">
            <MenuItem text="New" onAction="#handleNewDBAction"/>
            <MenuItem text="Open" onAction="#handleLoadDBAction"/>
            <MenuItem text="Save"/>
            <MenuItem text="Save As"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit"/>
        </Menu>
        <Menu text="Edit">
            <MenuItem text="User editor" onAction="#handleAddUserAction"/>
            <MenuItem text="Cut"/>
            <MenuItem text="Paste"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="Search" disable="true"/>
            <MenuItem text="Online Manual" visible="false"/>
            <SeparatorMenuItem/>
            <MenuItem text="About" onAction="#handleAboutAction"/>
        </Menu>
    </MenuBar>
</VBox>
