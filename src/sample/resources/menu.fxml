<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox id="vbox" prefHeight="400" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#handleNewDBAction" text="New" />
            <MenuItem onAction="#handleLoadDBAction" text="Open" />
            <MenuItem text="Save" />
            <MenuItem text="Save As" />
            <SeparatorMenuItem />
            <MenuItem text="Exit" />
        </Menu>
        <Menu text="Users">
              <MenuItem onAction="#handleAddUserAction" text="User editor" />
        </Menu>
        <Menu text="Help">
            <MenuItem disable="true" text="Search" />
            <MenuItem text="Online Manual" visible="false" />
            <SeparatorMenuItem />
            <MenuItem onAction="#handleAboutAction" text="About" />
        </Menu>
    </MenuBar>
    <TabPane fx:id="tabPane" prefHeight="385.0" prefWidth="800.0">
        <Tab closable="false" onSelectionChanged="#handleAddProjectAction" text="+">
        </Tab>
    </TabPane>
</VBox>
